{
  "name": "aragon-datastore",
  "version": "0.0.4",
  "description": "Datastore based on AragonOS",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "jam": {
    "main": "./dist/index.browser.js"
  },
  "browser": {
    "dist/index.js": "./dist/index.browser.js"
  },
  "scripts": {
    "start": "webpack -w",
    "build": "run-s truffle:compile && webpack",
    "test": "./scripts/test.sh",
    "ganache-cli:test": "scripts/ganache-cli.sh",
    "truffle:compile": "truffle compile && run-s truffle:copy-contracts",
    "truffle:migrate": "truffle compile --network development && truffle migrate --network development && run-s truffle:copy-contracts",
    "test:watch": "npm test -- --watch",
    "coverage": "solidity-coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tslint src/**/*.ts",
    "lint:fix": "tslint src/**/*.ts --fix",
    "release": "standard-version && npm pack",
    "truffle:copy-contracts": "copyfiles -f build/contracts/* src/build-contracts"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "^2.8.7",
    "@types/jest": "^20.0.7",
    "@types/node": "^8.0.24",
    "browserify": "^14.4.0",
    "copyfiles": "^2.0.0",
    "coveralls": "^3.0.2",
    "delete-empty": "^1.0.1",
    "dts-bundle": "^0.7.3",
    "ganache-cli": "^6.1.8",
    "jest": "^20.0.4",
    "npm-run-all": "^4.1.3",
    "solidity-coverage": "^0.3.5",
    "standard-version": "^4.2.0",
    "truffle": "^4.0.5",
    "ts-jest": "^20.0.10",
    "ts-loader": "^2.3.3",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.8.3",
    "webpack": "3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "@aragon/os": "^3.1.9",
    "async": "^2.6.1",
    "bignumber.js": "^7.2.1",
    "dotenv": "^2.0.0",
    "ipfs-api": "^21.0.0",
    "openzeppelin-solidity": "^1.10.0",
    "rxjs": "^5.5.6",
    "solc": "^0.4.18",
    "truffle-contract": "^3.0.5",
    "web3": "0.20.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/__tests__/",
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "testRegex": "src/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
